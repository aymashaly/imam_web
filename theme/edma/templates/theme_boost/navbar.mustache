
{{#top_header}}
    <div class="top-header-area bg-color-0f6c76">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="header-left-content">
                        <p>{{{top_header_content}}}</p>
                    </div>
                </div>

                {{#top_header_right_content}}
                    <div class="col-lg-4">
                        <ul class="header-right-content">
                            {{{top_header_right_content}}}
                        </ul>
                    </div>
                {{/top_header_right_content}}
            </div>
        </div>
    </div>
 {{/top_header}}

<div class="navbar-area">
    <div class="mobile-responsive-nav">
        <div class="container">
            <div class="mobile-responsive-menu">
                {{#logo_visibility}}
                    <div class="logo">
                        <a href="{{{ config.wwwroot }}}/">
                            {{#mobile_logo}}
                                <img src="{{mobile_logo}}" alt="{{sitename}}"  {{#mobile_logo_styles}} style="{{{mobile_logo_styles}}}" {{/mobile_logo_styles}}>
                            {{/mobile_logo}}

                            {{^ mobile_logo }}
                                <h2 {{#mobile_logo_styles}} style="{{{mobile_logo_styles}}}" {{/mobile_logo_styles}}>{{sitename}}</h2>
                            {{/mobile_logo}}
                        </a>
                    </div>
                {{/logo_visibility}}
            </div>
        </div>
    </div>

    <div class="desktop-nav">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-md navbar-light">
                {{#logo_visibility}}
                    <a class="navbar-brand" href="{{{ config.wwwroot }}}/">
                        {{#main_logo}}
                            <img src="{{main_logo}}" alt="{{sitename}}"  {{#logo_styles}} style="{{{logo_styles}}}" {{/logo_styles}}>
                        {{/main_logo}}

                        {{^ main_logo }}
                            <h2  {{#logo_styles}} style="{{{logo_styles}}}" {{/logo_styles}}>{{sitename}}</h2>
                        {{/main_logo}}
                    </a>
                {{/logo_visibility}}
                
                <div class="collapse navbar-collapse mean-menu" id="navbarSupportedContent">
                    <div class="category d-none d-lg-block">
                        <a href="#" data-toggle="modal" data-target="#exampleModal">
                            <img src="{{{ config.wwwroot }}}/theme/edma/pix/category.svg">
                        </a>
                    </div>

                    {{#header_search_bar}}
                        <div class="others-options pe-0">
                            {{{edma_globalsearch_navbar}}}
                        </div>
                    {{/header_search_bar}}

                    <ul id="menu-primary-menu" class="navbar-nav ms-auto">
                        {{{ output.custom_menu }}}
                    </ul>

                    {{output.if_edma_guest_user}}

                    {{^ isloggedin}}
                        {{#header_btn_text}}
                            <div class="others-options">
                                <ul class="d-flex align-items-center">
                                    {{#header_left_btn_text}}
                                        <li>
                                            {{#header_left_btn_url}} <a href="{{header_left_btn_url}}" class="read-more"> {{/header_left_btn_url}}
                                            {{^ header_left_btn_url }} <a href="{{ login_url }}" class="read-more"> {{/header_left_btn_url}}
                                                {{header_left_btn_text}}
                                            </a>
                                        </li>
                                    {{/header_left_btn_text}}

                                    <li>
                                        {{#header_btn_url}} <a href="{{header_btn_url}}" class="default-btn"> {{/header_btn_url}}
                                        {{^ header_btn_url }} <a href="{{ signup_url }}" class="default-btn"> {{/header_btn_url}}
                                            <i class="{{header_btn_icon}}"></i>
                                            {{header_btn_text}}<span></span>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        {{/header_btn_text}}
                    {{/isloggedin}}
                    
                    {{#isloggedin}}
                        {{> theme_edma/edma_navbar_user }}
                    {{/isloggedin}}
                </div>
            </nav>
        </div>
    </div>

    <div class="others-option-for-responsive">
        <div class="container">
            <div class="dot-menu">
                <div class="inner">
                    <div class="circle circle-one"></div>
                    <div class="circle circle-two"></div>
                    <div class="circle circle-three"></div>
                </div>
            </div>
            
            <div class="container">
                <div class="option-inner">
                    <div class="others-options justify-content-center">
                        {{#isloggedin}}
                            {{> theme_edma/edma_navbar_user }}
                        {{/isloggedin}}

                        <ul>
                            {{#header_search_bar}}
                                <li>
                                    {{{edma_globalsearch_navbar}}}
                                </li>
                            {{/header_search_bar}}
                            <li>
                                <div class="category">
                                    <a href="#" data-toggle="modal" data-target="#exampleModal">
                                        <img src="{{{ config.wwwroot }}}/theme/edma/pix/category.svg">
                                    </a>
                                </div>
                            </li>
                            {{output.if_edma_guest_user}}

                            {{^ isloggedin}}
                                {{#header_btn_text}}
                                    {{#header_left_btn_text}}
                                        <li>
                                            {{#header_left_btn_url}} <a href="{{header_left_btn_url}}" class="read-more"> {{/header_left_btn_url}}
                                            {{^ header_left_btn_url }} <a href="{{ login_url }}" class="read-more"> {{/header_left_btn_url}}
                                                {{header_left_btn_text}}
                                            </a>
                                        </li>
                                    {{/header_left_btn_text}}

                                    <li>
                                        {{#header_btn_url}} <a href="{{header_btn_url}}" class="default-btn"> {{/header_btn_url}}
                                        {{^ header_btn_url }} <a href="{{ signup_url }}" class="default-btn"> {{/header_btn_url}}
                                            <i class="{{header_btn_icon}}"></i>
                                            {{header_btn_text}}<span></span>
                                        </a>
                                    </li>
                                {{/header_btn_text}}
                            {{/isloggedin}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade offcanvas-area" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header offcanvas-header">
                <h5 class="modal-title offcanvas-title" id="exampleModalLabel">
                    {{#logo_visibility}}
                        <a class="navbar-brand" href="{{{ config.wwwroot }}}/">
                            {{#main_logo}}
                                <img src="{{main_logo}}" alt="{{sitename}}"  {{#logo_styles}} style="{{{logo_styles}}}" {{/logo_styles}}>
                            {{/main_logo}}

                            {{^ main_logo }}
                                <h2  {{#logo_styles}} style="{{{logo_styles}}}" {{/logo_styles}}>{{sitename}}</h2>
                            {{/main_logo}}
                        </a>
                    {{/logo_visibility}}
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="ri-close-line"></i></span>
                </button>
            </div>

            <div class="modal-body offcanvas-body">
                {{#offcanvas_content}} 
                    {{{offcanvas_content}}}
                {{/offcanvas_content}}

                {{#offcanvas_social_title}}
                    <div class="social-link">
                        <h3>{{offcanvas_social_title}}</h3>

                        <ul>
                            {{> theme_edma/edma_social_icons }}
                        </ul>
                    </div>
                {{/offcanvas_social_title}}
            </div>
        </div>
    </div>
</div>