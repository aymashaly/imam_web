<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/orgstructure/db" VERSION="2025042100" COMMENT="Organizational Structure plugin">
  <TABLES>

    <TABLE NAME="org_sectors" COMMENT="القطاعات">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="org_departments" COMMENT="الأقسام">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="sectorid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="sectorfk" TYPE="foreign" FIELDS="sectorid" REFTABLE="org_sectors" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

    <TABLE NAME="org_jobroles" COMMENT="الأدوار الوظيفية">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="departmentid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="departmentfk" TYPE="foreign" FIELDS="departmentid" REFTABLE="org_departments" REFFIELDS="id"/>
      </KEYS>
    </TABLE>

  </TABLES>
</XMLDB>
