<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/mist/db" VERSION="2025050700" COMMENT="Database structure for MIST plugin" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
<TABLES>
    <TABLE NAME="local_mist_certskip" COMMENT="Requests for skipping courses based on external certificates">
    <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="certificate_name" TYPE="char" LENGTH="255" SEQUENCE="false" NOTNULL="true"/>
        <FIELD NAME="issuing_body" TYPE="char" LENGTH="255" SEQUENCE="false" NOTNULL="true"/>
        <FIELD NAME="date_issued" TYPE="int" LENGTH="10" SEQUENCE="false" NOTNULL="true"/>
        <FIELD NAME="file_path" TYPE="char" LENGTH="255" SEQUENCE="false" NOTNULL="false"/>
        <FIELD NAME="request_status" TYPE="char" LENGTH="20" SEQUENCE="false" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" SEQUENCE="false" NOTNULL="true"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" SEQUENCE="false" NOTNULL="true"/>
    </FIELDS>
    <KEYS>
        <!-- Primary Key -->
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        
        <!-- Foreign Keys -->
        <KEY NAME="userfk" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
        <KEY NAME="coursefk" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
    </KEYS>
    </TABLE>
    <TABLE NAME="local_mist_invoices" COMMENT="Invoice records">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true"/>
        <FIELD NAME="amount" TYPE="number" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="tax" TYPE="number" LENGTH="10" NOTNULL="true" DEFAULT="0.00"/>
        <FIELD NAME="total" TYPE="number" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="status" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="pending"/>
        <FIELD NAME="reference" TYPE="char" LENGTH="40" NOTNULL="true"/>
        <FIELD NAME="created" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="due" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="user" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    
    <TABLE NAME="local_mist_invoice_items" COMMENT="Invoice line items">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="invoiceid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="itemtype" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="enrollment"/>
        <FIELD NAME="itemid" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="description" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="amount" TYPE="number" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="tax" TYPE="number" LENGTH="10" NOTNULL="true" DEFAULT="0.00"/>
        <FIELD NAME="quantity" TYPE="int" LENGTH="5" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="invoiceid" TYPE="foreign" FIELDS="invoiceid" REFTABLE="local_mist_invoices" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    
    <TABLE NAME="local_mist_fees" COMMENT="Fee definitions">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
        <FIELD NAME="feetype" TYPE="char" LENGTH="20" NOTNULL="true" DEFAULT="enrollment"/>
        <FIELD NAME="amount" TYPE="number" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="description" TYPE="char" LENGTH="255" NOTNULL="true"/>
        <FIELD NAME="taxable" TYPE="int" LENGTH="1" NOTNULL="true" DEFAULT="1"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true"/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>

</TABLES>
</XMLDB>